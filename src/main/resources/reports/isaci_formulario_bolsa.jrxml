<?xml version="1.0" encoding="UTF-8"?>
<jasperReport
        xmlns="http://jasperreports.sourceforge.net/jasperreports"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
                        http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
        name="isaci_formulario_bolsa"
        language="java"
        pageWidth="595"
        pageHeight="842"
        columnWidth="555"
        leftMargin="20"
        rightMargin="20"
        topMargin="20"
        bottomMargin="20">

    <!-- ========== PARÂMETROS ========== -->
    <parameter name="LOGO_PATH" class="java.lang.String"/>

    <!-- ========== CAMPOS ========== -->
    <field name="nome" class="java.lang.String"/>
    <field name="cpf" class="java.lang.String"/>
    <field name="rg" class="java.lang.String"/>
    <field name="emissorRG" class="java.lang.String"/>
    <field name="dataNascimento" class="java.util.Date"/>
    <field name="estadoCivil" class="java.lang.String"/>
    <field name="telefone" class="java.lang.String"/>
    <field name="email" class="java.lang.String"/>
    <field name="grauInstrucao" class="java.lang.String"/>
    <field name="logradouro" class="java.lang.String"/>
    <field name="numero" class="java.lang.String"/>
    <field name="complemento" class="java.lang.String"/>
    <field name="bairro" class="java.lang.String"/>
    <field name="cidade" class="java.lang.String"/>
    <field name="estado" class="java.lang.String"/>
    <field name="cep" class="java.lang.String"/>
    <field name="banco" class="java.lang.String"/>
    <field name="agencia" class="java.lang.String"/>
    <field name="dvagencia" class="java.lang.String"/>
    <field name="conta" class="java.lang.String"/>
    <field name="dvconta" class="java.lang.String"/>
    <field name="valorBolsa" class="java.math.BigDecimal"/>
    <field name="quantidade" class="java.lang.Integer"/>
    <field name="totalPagamentos" class="java.math.BigDecimal"/>
    <field name="atividades" class="java.lang.String"/>
    <field name="nomeprojeto" class="java.lang.String"/>

    <!-- ========== CABEÇALHO ========== -->
    <pageHeader>
        <band height="60">
            <image>
                <reportElement x="0" y="10" width="50" height="50"/>
                <imageExpression><![CDATA[$P{LOGO_PATH}]]></imageExpression>
            </image>
            <textField>
                <reportElement x="60" y="10" width="480" height="20"/>
                <textElement textAlignment="Left">
                    <font size="12" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["INSTITUTO SUSTENTABILIDADE DA AMAZÔNIA COM CIÊNCIA E INOVAÇÃO"]]></textFieldExpression>
            </textField>
            <line>
                <reportElement x="0" y="48" width="555" height="1"/>
            </line>
        </band>
    </pageHeader>

    <!-- ========== CABEÇALHO DO RELATÓRIO ========== -->
    <columnHeader>
        <band height="40">
            <textField>
                <reportElement x="0" y="10" width="555" height="20"/>
                <textElement textAlignment="Center">
                    <font size="14" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Formulário de Indicação de Bolsista"]]></textFieldExpression>
            </textField>
        </band>
    </columnHeader>

    <!-- ========== CORPO PRINCIPAL ========== -->
    <detail>
        <band height="620">

            <!-- 1. Identificação do Projeto -->
            <textField>
                <reportElement x="0" y="10" width="200" height="20"/>
                <textElement><font isBold="true"/></textElement>
                <textFieldExpression><![CDATA["1. IDENTIFICAÇÃO DO PROJETO"]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="30" width="150" height="15"/>
                <textElement><font size="10" isBold="true"/></textElement>
                <textFieldExpression><![CDATA["Nome do Projeto:"]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="160" y="30" width="380" height="15"/>
                <textFieldExpression><![CDATA[$F{nomeprojeto}]]></textFieldExpression>
            </textField>

            <!-- 2. Identificação do Bolsista -->
            <textField>
                <reportElement x="0" y="70" width="250" height="20"/>
                <textElement><font isBold="true"/></textElement>
                <textFieldExpression><![CDATA["2. IDENTIFICAÇÃO DO BOLSISTA"]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="90" width="140" height="15"/>
                <textElement><font size="10" isBold="true"/></textElement>
                <textFieldExpression><![CDATA["Nome Completo:"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="150" y="90" width="380" height="15"/>
                <textFieldExpression><![CDATA[$F{nome}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="110" width="140" height="15"/>
                <textElement><font size="10" isBold="true"/></textElement>
                <textFieldExpression><![CDATA["CPF:"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="150" y="110" width="380" height="15"/>
                <textFieldExpression><![CDATA[$F{cpf}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="130" width="140" height="15"/>
                <textElement><font size="10" isBold="true"/></textElement>
                <textFieldExpression><![CDATA["Data de Nascimento:"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="150" y="130" width="380" height="15"/>
                <textFieldExpression><![CDATA[new java.text.SimpleDateFormat("dd/MM/yyyy").format($F{dataNascimento})]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="150" width="140" height="15"/>
                <textElement><font size="10" isBold="true"/></textElement>
                <textFieldExpression><![CDATA["RG / Emissor:"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="150" y="150" width="380" height="15"/>
                <textFieldExpression><![CDATA[$F{rg} + " / " + $F{emissorRG}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="170" width="140" height="15"/>
                <textElement><font size="10" isBold="true"/></textElement>
                <textFieldExpression><![CDATA["Email:"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="150" y="170" width="380" height="15"/>
                <textFieldExpression><![CDATA[$F{email}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="190" width="140" height="15"/>
                <textElement><font size="10" isBold="true"/></textElement>
                <textFieldExpression><![CDATA["Telefone:"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="150" y="190" width="380" height="15"/>
                <textFieldExpression><![CDATA[$F{telefone}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="210" width="140" height="15"/>
                <textElement><font size="10" isBold="true"/></textElement>
                <textFieldExpression><![CDATA["Titulação:"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="150" y="210" width="380" height="15"/>
                <textFieldExpression><![CDATA[$F{grauInstrucao}]]></textFieldExpression>
            </textField>

            <!-- 3. Dados Bancários -->
            <textField>
                <reportElement x="0" y="250" width="250" height="20"/>
                <textElement><font isBold="true"/></textElement>
                <textFieldExpression><![CDATA["3. DADOS BANCÁRIOS"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="270" width="140" height="15"/>
                <textElement><font size="10" isBold="true"/></textElement>
                <textFieldExpression><![CDATA["Banco:"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="150" y="270" width="380" height="15"/>
                <textFieldExpression><![CDATA[$F{banco}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="290" width="140" height="15"/>
                <textElement><font size="10" isBold="true"/></textElement>
                <textFieldExpression><![CDATA["Agência:"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="150" y="290" width="380" height="15"/>
                <textFieldExpression><![CDATA[$F{agencia} + "-" + $F{dvagencia}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="310" width="140" height="15"/>
                <textElement><font size="10" isBold="true"/></textElement>
                <textFieldExpression><![CDATA["Conta Corrente:"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="150" y="310" width="380" height="15"/>
                <textFieldExpression><![CDATA[$F{conta} + "-" + $F{dvconta}]]></textFieldExpression>
            </textField>

            <!-- 4. Dados da Bolsa -->
            <textField>
                <reportElement x="0" y="350" width="250" height="20"/>
                <textElement><font isBold="true"/></textElement>
                <textFieldExpression><![CDATA["4. DADOS DA BOLSA"]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="370" width="140" height="15"/>
                <textElement><font size="10" isBold="true"/></textElement>
                <textFieldExpression><![CDATA["Valor Mensal da Bolsa:"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="150" y="370" width="380" height="15"/>
                <textFieldExpression><![CDATA["R$ " + new java.text.DecimalFormat("#,##0.00").format($F{valorBolsa})]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="390" width="140" height="15"/>
                <textElement><font size="10" isBold="true"/></textElement>
                <textFieldExpression><![CDATA["Quantidade de Parcelas:"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="150" y="390" width="380" height="15"/>
                <textFieldExpression><![CDATA[$F{quantidade}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="410" width="140" height="15"/>
                <textElement><font size="10" isBold="true"/></textElement>
                <textFieldExpression><![CDATA["Valor Total da Bolsa:"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="150" y="410" width="380" height="15"/>
                <textFieldExpression><![CDATA[
                    "R$ " + new java.text.DecimalFormat("#,##0.00").format($F{totalPagamentos})
                ]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="440" width="140" height="15"/>
                <textElement><font size="10" isBold="true"/></textElement>
                <textFieldExpression><![CDATA["Atividades:"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="150" y="440" width="380" height="40"/>
                <textFieldExpression><![CDATA[$F{atividades}]]></textFieldExpression>
            </textField>

            <!-- Assinaturas -->
            <textField>
                <reportElement x="20" y="510" width="545" height="15"/>
                <textElement textAlignment="Left">
                    <font size="10" isItalic="true"/>
                </textElement>
                <textFieldExpression><![CDATA[
                    "Marabá, " + new java.text.SimpleDateFormat("dd 'de' MMMM 'de' yyyy", new java.util.Locale("pt","BR")).format(new java.util.Date())
                ]]></textFieldExpression>
            </textField>
            <line>
                <reportElement x="20" y="570" width="200" height="1"/>
            </line>
            <textField>
                <reportElement x="20" y="575" width="200" height="15"/>
                <textElement textAlignment="Center"><font size="10" isBold="true"/></textElement>
                <textFieldExpression><![CDATA["Assinatura do Beneficiário"]]></textFieldExpression>
            </textField>
            <line>
                <reportElement x="315" y="570" width="200" height="1"/>
            </line>
            <textField>
                <reportElement x="315" y="575" width="200" height="15"/>
                <textElement textAlignment="Center"><font size="10" isBold="true"/></textElement>
                <textFieldExpression><![CDATA["Representante iSACI"]]></textFieldExpression>
            </textField>

        </band>
    </detail>

    <!-- ========== RODAPÉ ========== -->
    <pageFooter>
        <band height="60">
            <line>
                <reportElement x="0" y="40" width="555" height="1"/>
            </line>
            <textField>
                <reportElement x="0" y="45" width="555" height="15"/>
                <textElement textAlignment="Center">
                    <font size="8" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[
                    "INSTITUTO SUSTENTABILIDADE DA AMAZÔNIA COM CIÊNCIA E INOVAÇÃO - CNPJ 51.798.925/0001-60"
                ]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

</jasperReport>